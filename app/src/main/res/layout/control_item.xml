<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:padding="8dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_control_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintLeft_toRightOf="@+id/img_cotrol_item_status" android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="@+id/img_cotrol_item_status" android:layout_marginTop="8dp"/>
        <ImageView
                android:id="@+id/img_cotrol_item_status"
                android:layout_width="60dp"
                android:layout_height="60dp" android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"/>
        <TextView
                android:id="@+id/tv_control_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_control_item_name"
                app:layout_constraintLeft_toRightOf="@+id/img_cotrol_item_status" android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_cotrol_item_status" android:layout_marginBottom="8dp"/>
        <Button
                android:id="@+id/btn_control_item_changeStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" app:layout_constraintTop_toTopOf="@+id/img_cotrol_item_status"
                android:layout_marginTop="8dp" app:layout_constraintLeft_toRightOf="@+id/tv_control_item_name"
                android:layout_marginLeft="8dp" app:layout_constraintBottom_toBottomOf="@+id/img_cotrol_item_status"
                android:layout_marginBottom="8dp" android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>
