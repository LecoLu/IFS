<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:padding="2dp"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:id="@+id/img_ie_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#00ff00"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:id="@+id/sensorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="TextView" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/img_ie_bg" app:layout_constraintTop_toTopOf="@+id/img_ie_bg"
            android:layout_marginTop="8dp" android:layout_marginStart="8dp"/>

    <TextView
            android:id="@+id/sensorStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/sensorName"
            android:text="TextView" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sensorName" android:layout_marginStart="8dp"/>


    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_fiber_manual_record_24dp"
            android:id="@+id/imageView"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/sensorStatus"
            android:layout_marginLeft="50dp" app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
            android:id="@+id/sensorValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textColor="#000" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/imageView" app:layout_constraintTop_toTopOf="@+id/imageView"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="@+id/imageView"
            android:layout_marginBottom="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>